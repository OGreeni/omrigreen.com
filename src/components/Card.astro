---
export interface Props {
  title: string;
  description: string;
  tags: string[];
  href: string;
}

const { title, description, tags, href } = Astro.props;
---

<a
  href={href}
  class="card w-xl bg-base-100 shadow-xl hover:scale-105 transition-all hover:opacity-80"
>
  <div class="card-body">
    <h2 class="card-title text-2xl">{title}</h2>
    <p>{description}</p>
    <div class="card-actions justify-end">
      {tags.map((tag) => <div class="badge badge-outline">#{tag}</div>)}
    </div>
  </div>
</a>
